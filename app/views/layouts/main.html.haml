%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title Video Tube
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .top-bar
      .row
        .top-bar-left
          %ul.menu
            %li
              = link_to root_path do
                Video Tube
            %li
              %input.skinny{:placeholder => "Search", :type => "search"}
            %li
              %button.button.skinny{:type => "button"} Search
        .top-bar-right
          %ul.dropdown.menu{"data-dropdown-menu" => ""}
            - if is_logged_in?
              %li
                = link_to uploads_path do
                  Upload
              %li.has-submenu
                %a{:href => "#"} My Account
                %ul.submenu.menu.vertical{"data-submenu" => ""}
                  %li
                    = link_to channel_path(current_user) do
                      = current_user.username
                  %li
                    = link_to edit_user_path(current_user) do
                      Settings
                  %li
                    = link_to logout_path, method: :post do
                      Logout
            - else
              %li
                = link_to login_path do
                  Upload
              %li
                = link_to login_path do
                  Login

    - if flash.notice
      .flashes.row.column
        .callout.small.success
          %h5= flash.notice
    - if flash.alert
      .flashes.row.column
        .callout.small.alert
          %h5= flash.alert

  #content
    .row.column
      = yield
