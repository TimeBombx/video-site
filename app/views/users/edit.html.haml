.callout
  = form_for :settings do |f|
    = f.label :channel_name
    = f.text_field :channel_name
    
    = f.label :unqiue_url
    = f.text_field :disabled_prefix, disabled: "disabled", value: "http://localhost:3000/channel/", class: "small-input"
    = f.text_field :unqiue_url, class: "unique-input"
    
    = f.label :description
    = f.text_area :description, style: "height: 100px;"
    
    = f.label :channel_banner
    = f.file_field :channel_banner
    
    = f.submit "Update", class: "button", style: "margin-bottom: 0px;"